<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sample Shop Application</title>
    @Styles.Render("~/Content/css")
    @*@Scripts.Render("~/bundles/modernizr")*@
    @Styles.Render("~/Content/FormStyle.css")


</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Buy with YenePay", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <p id="index-p">#Items:</p>
                <img id="index-para" src="~/Content/Images/images.jpg" style="width:50px;height:50px" />
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Buy Single Item", "Index", "Home")</li>
                    <li>@Html.ActionLink("Buy Multiple Items", "Cart", "Home")</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">

        @RenderBody()

    </div>

    <script type="text/javascript">
        var cartUrl = '@Url.Action("CheckoutCart", "Home")';
    </script>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/Scripts/Application.js")
    @RenderSection("scripts", required: false)
</body>
</html>
